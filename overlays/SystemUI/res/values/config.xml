<resources>
    <!-- Enable doze mode -->
    <bool name="doze_display_state_supported">true</bool>

    <!-- If not zero, limits the internal screen recorder's framerate to the set value. -->
    <integer name="config_screenRecorderMaxFramerate">60</integer>

    <!-- Height of the status bar header bar when on Keyguard -->
    <dimen name="status_bar_header_height_keyguard">@*android:dimen/status_bar_height</dimen>

    <!-- The padding on the top of the statusbar (usually 0) -->
    <dimen name="status_bar_padding_top">2.5dp</dimen>

    <!-- Should we vibrate on an icon animation of the shelf. This should only be active if the
     vibrator is capable of subtle vibrations -->
    <bool name="config_vibrateOnIconAnimation">true</bool>

    <!-- Wheter to enable additional animations that most likely to be janky on device with low graphic processing power -->
    <bool name="config_lowGraphicDevice">true</bool>

    <!-- Whether to play turbulence noise after clicking the play button -->
    <bool name="config_turbulenceNoise">false</bool>

    <!-- Unlock ripple animation -->
    <bool name="config_enableUnlockRippleAnimation">false</bool>

    <!-- Determines whether the shell features all run on another thread. -->
    <bool name="config_enableShellMainThread">true</bool>
</resources>
